# Supabase Configuration (optional)
NEXT_PUBLIC_SUPABASE_URL=your_supabase_project_url
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key
SUPABASE_SERVICE_ROLE=your_supabase_service_role_key

# CSRF Protection (required)
CSRF_SECRET=your_32_character_random_string

# Encryption Key (required for BYOK if enabled)
ENCRYPTION_KEY=your_base64_encryption_key

# AI Model API Key (required)
OPENROUTER_API_KEY=your_openrouter_api_key

# Exa Search (optional - for enhanced web search capabilities)
# Get your API key at https://exa.ai
EXA_API_KEY=your_exa_api_key

# PostHog Analytics (optional - for product analytics and user behavior tracking)
# Get your API key from https://posthog.com
# person_profiles: 'identified_only' - Only creates profiles for logged-in users
# capture_pageview: false - Manual pageview tracking for better control
# autocapture: Captures clicks and form submits on buttons and links
NEXT_PUBLIC_POSTHOG_KEY=your_posthog_api_key
NEXT_PUBLIC_POSTHOG_HOST=https://us.i.posthog.com
NEXT_PUBLIC_POSTHOG_ENABLE_RECORDINGS=false

# Polar.sh Payments Configuration (required for subscriptions)
# Get your API key from https://polar.sh
# Polar handles subscriptions and provides webhook support
POLAR_ACCESS_TOKEN=polar_access_token_here
POLAR_WEBHOOK_SECRET=polar_webhook_secret_here

# Polar Product IDs (create these in your Polar dashboard)
    POLAR_PRODUCT_ID_PRO=a3e85ac9-6f06-488e-90c6-4c36787d030e
    POLAR_PRODUCT_ID_MAX=a9402895-8cda-4157-8565-19d44e61066c
    POLAR_PRODUCT_ID_ULTRA=f2ff82cf-0d6a-40ee-a448-3cef21fa45ab

# Set to 'sandbox' for testing, leave empty for production
NEXT_PUBLIC_POLAR_ENV=sandbox

# Production Configuration (optional)
NEXT_PUBLIC_VERCEL_URL=your_production_domain

# Development Tools (optional)
ANALYZE=false
